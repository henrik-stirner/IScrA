[server]
domain = domain-name.extension

[port]
# standard ports
# smtp often also 25 or 465 or 2525
smtp = 587
imap = 143

[domain_extension]
login = /iserv/auth/login
logout = /iserv/auth/logout
settings = /iserv/profile/settings

file = /iserv/file/-/Files
files = /iserv/file/-
files_user_ext = /Files
files_group_ext = /Groups
files_show_page_ext = ?show=true

filesystem_display = /iserv/fs/file
filesystem_download = /iserv/fs/download
filesystem_local_ext = /local

text = /iserv/etherpad

exercise = /iserv/exercise
exercise_past = /iserv/exercise/past/exercise
exercise_csv = /iserv/exercise.csv

mail = /iserv/mail
messenger = /iserv/messenger/
messenger_room = /iserv/messenger/room

videoconference_load = /iserv/videoconference/api/health

news = /iserv/news

[path]
data = ./data

mail = ./data/mail

mail_extension = ./data/mail/extension
# plaintext and html subdirectories are mandatory
mail_extension_plaintext = ./data/mail/extension/plaintext
mail_extension_html = ./data/mail/extension/html

mail_template = ./data/mail/template
# plaintext and html subdirectories are mandatory
mail_template_plaintext = ./data/mail/template/plaintext
mail_template_html = ./data/mail/template/html

mail_schedule = ./data/mail/schedule

exercises = ./data/exercises
exercise = ./data/exercises/exercise

texts = ./data/texts

# filesystem will be a root directory of directories and files in the users remote IServ filesystem
filesystem = ./data/filesystem
